{
  "manifest_version": 3,
  "name": "Exchange Prioritizer - Eisenhower Matrix",
  "version": "1.0.4",
  "description": "Priorizáld az e-maileket Eisenhower matrix alapján",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Exchange Prioritizer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://xch.ulyssys.hu/*",
        "*://outlook.office365.com/*",
        "*://outlook.office.com/*",
        "*://outlook.live.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*/*"],
      "js": ["universal-content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}